<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_scan_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lnyswz.wuliu.view.CkfhScanShowActivity">

    <TextView
        android:id="@+id/tv_ckfh_bm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_ckfh_lsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="32dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tv_ckfh_bm"
        app:layout_constraintTop_toBottomOf="@+id/tv_ckfh_bm" />

    <!--<TextView-->
        <!--android:id="@+id/tv_ckfh_thfs"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:visibility="gone"-->
        <!--android:textSize="20dp"-->
        <!--app:layout_constraintStart_toStartOf="@+id/tv_ckfh_lsh"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/tv_ckfh_bm" />-->


    <TextView
        android:id="@+id/tv_ckfh_kh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tv_ckfh_lsh"
        app:layout_constraintTop_toBottomOf="@+id/tv_ckfh_lsh" />


    <Button
        android:id="@+id/btn_ckfh_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="22dp"
        android:visibility="gone"
        android:background="@drawable/button_shape_normal"
        android:textColor="@color/colorWhiteText"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <EditText
        android:id="@+id/et_scan_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/scan_hint"
        android:inputType="number"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2" />


    <TextView
        android:id="@+id/tv_ckfh_scan_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"
        android:textSize="21dp"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@+id/et_scan_input"
        app:layout_constraintEnd_toEndOf="@+id/et_scan_input"
        app:layout_constraintTop_toBottomOf="@+id/et_scan_input"
        app:layout_constraintBottom_toBottomOf="parent"
     />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_ckfh_recyler"
        android:layout_width="320dp"
        android:layout_height="293dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ckfh_kh"
        android:visibility="gone"
        android:background="@color/colorGray"
        >

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>
