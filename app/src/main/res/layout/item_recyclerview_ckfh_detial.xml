<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFE1FF"
    android:padding="5dp"
    >




    <TextView
        android:id="@+id/tv_ckfh_detail_spmc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_ckfh_detail_spbh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_ckfh_detail_spmc"
        android:layout_marginTop="16dp"

        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_ckfh_detail_sppp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_ckfh_detail_spbh"
        android:layout_alignBottom="@+id/tv_ckfh_detail_spbh"
        android:layout_marginStart="73dp"
        android:layout_toEndOf="@+id/tv_ckfh_detail_spcd"

        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_ckfh_detail_spcd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_ckfh_detail_spbh"
        android:layout_marginTop="16dp"

        android:textSize="18dp" />


    <TextView
        android:id="@+id/tv_ckfh_detail_zjldwsl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_ckfh_detail_spcd"
        android:layout_alignBottom="@+id/tv_ckfh_detail_spcd"
        android:layout_alignStart="@+id/tv_ckfh_detail_sppp"
        android:textColor="@color/colorRed"
        android:textSize="18dp" />



</RelativeLayout>
